<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.lg.gridlayoutcalculate.MainActivity">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/but_num1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/but_num2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="2" />
        <Button
            android:id="@+id/but_num3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="3" />


        <Button
            android:id="@+id/but_num9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:text="9" />

        <Button
            android:id="@+id/but_num6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/but_num5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/but_num4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:text="4" />



        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="7" />
        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="8" />
    </GridLayout>


    <Button
        android:id="@+id/but_op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <Button
        android:id="@+id/but_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-" />

    <Button
        android:id="@+id/but_op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="x" />

    <Button
        android:id="@+id/but_op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:textColor="#ff4901"
        android:gravity="bottom"
        android:textSize="30dp" />
</LinearLayout>